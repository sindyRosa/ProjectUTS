<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="171dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="Nama Kue"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_harga"
                android:layout_width="148dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="Harga"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="74dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:background="#03DAC5">

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="215dp"
                    android:layout_height="39dp"
                    android:text="Detail Pembelian :"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="215dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/detail"
                    android:layout_marginTop="2dp"
                    android:text="Total Harga :"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="27dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/detail"
                    android:text="0" />

                <TextView
                    android:id="@+id/Rp"
                    android:layout_width="29dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/text_detail"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/harga"
                    android:text="Rp." />

                <TextView
                    android:id="@+id/total_pembelian1"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="35dp"
                    android:layout_toEndOf="@+id/Rp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
